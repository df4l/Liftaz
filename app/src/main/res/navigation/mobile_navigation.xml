<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_soulever">

    <fragment
        android:id="@+id/navigation_soulever"
        android:name="com.df4l.liftaz.soulever.SouleverFragment"
        android:label="@string/title_soulever"
        tools:layout="@layout/fragment_soulever">
        <action
            android:id="@+id/action_souleverFragment_to_exercicesFragment"
            app:destination="@id/navigation_exercices" />
        <action
            android:id="@+id/action_souleverFragment_to_seancesFragment"
            app:destination="@id/navigation_seances" />
        <action
            android:id="@+id/action_souleverFragment_to_entrainementFragment"
            app:destination="@id/navigation_entrainement" />
        <action
            android:id="@+id/action_souleverFragment_to_motivationFioulFragment"
            app:destination="@id/navigation_motivationfioul" />
    </fragment>

    <fragment
        android:id="@+id/navigation_exercices"
        android:name="com.df4l.liftaz.soulever.exercices.exercicesMenu.ExercicesFragment"
        android:label="Exercices"
        tools:layout="@layout/fragment_exercices">
    <action
        android:id="@+id/action_exercicesFragment_to_elastiquesFragment"
        app:destination="@id/navigation_elastiques" />
    </fragment>

    <fragment
        android:id="@+id/navigation_elastiques"
        android:name="com.df4l.liftaz.soulever.elastiques.ElastiquesFragment"
        android:label="Exercices"
        tools:layout="@layout/fragment_elastiques"
        />

    <fragment
        android:id="@+id/navigation_seances"
        android:name="com.df4l.liftaz.soulever.seances.seancesMenu.SeancesFragment"
        android:label="Séances"
        tools:layout="@layout/fragment_seances">
        <action
            android:id="@+id/action_seancesFragment_to_creationseanceFragment"
            app:destination="@id/navigation_creationseance" />
    </fragment>

    <fragment
        android:id="@+id/navigation_entrainement"
        android:name="com.df4l.liftaz.soulever.seances.entrainement.EntrainementFragment"
        android:label="Entrainement"
        tools:layout="@layout/fragment_entrainement"
        />

    <fragment
        android:id="@+id/navigation_motivationfioul"
        android:name="com.df4l.liftaz.soulever.fioul.FioulFragment"
        android:label="Fioul de motivation"
        tools:layout="@layout/fragment_motivationfioul"
        />

    <fragment
        android:id="@+id/navigation_creationseance"
        android:name="com.df4l.liftaz.soulever.seances.creationSeance.CreationSeanceFragment"
        android:label="Création d'une séance"
        tools:layout="@layout/fragment_creationseance"
        />

    <fragment
        android:id="@+id/navigation_manger"
        android:name="com.df4l.liftaz.manger.MangerFragment"
        android:label="@string/title_manger"
        tools:layout="@layout/fragment_manger" />

    <fragment
        android:id="@+id/navigation_stats"
        android:name="com.df4l.liftaz.stats.StatsFragment"
        android:label="@string/title_stats"
        tools:layout="@layout/fragment_stats" />
</navigation>