<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:behavior_hideable="false"
    app:behavior_peekHeight="42dp"
    app:cardElevation="8dp"
    app:layout_behavior="com.df4l.liftaz.manger.diete.TopSheetBehavior">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layoutObjectif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Objectif journalier" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <NumberPicker
                        android:id="@+id/npCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp" />

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="calories" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <!-- MACROS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- PROTÉINES -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Protéines" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderProteines"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:stepSize="1"
                        android:value="30"
                        android:valueFrom="0"
                        android:valueTo="100"
                        app:thumbColor="#ec99b5"
                        app:trackColorActive="#ec99b5" />

                    <TextView
                        android:id="@+id/tvProteinesPercentage"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="30%" />

                    <EditText
                        android:id="@+id/etProteinesGrams"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:inputType="number"
                        android:gravity="end"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- GLUCIDES -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Glucides" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderGlucides"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:stepSize="1"
                        android:value="40"
                        android:valueFrom="0"
                        android:valueTo="100"
                        app:thumbColor="#86e8cd"
                        app:trackColorActive="#86e8cd" />

                    <TextView
                        android:id="@+id/tvGlucidesPercentage"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="40%" />

                    <EditText
                        android:id="@+id/etGlucidesGrams"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:inputType="number"
                        android:gravity="end"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- LIPIDES -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Lipides" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderLipides"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:stepSize="1"
                        android:value="30"
                        android:valueFrom="0"
                        android:valueTo="100"
                        app:thumbColor="#f2d678"
                        app:trackColorActive="#f2d678" />

                    <TextView
                        android:id="@+id/tvLipidesPercentage"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="30%" />

                    <EditText
                        android:id="@+id/etLipidesGrams"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:inputType="number"
                        android:gravity="end"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabToggleTopSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="-28dp"
            android:contentDescription="Définir les objectifs"
            app:backgroundTint="?attr/colorPrimary"
            app:fabSize="normal"
            app:tint="@color/white" />

    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
