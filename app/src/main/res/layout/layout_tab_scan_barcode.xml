<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <!--
        Ce PreviewView affichera le flux de la caméra.
        Vous devrez le lier à CameraX dans votre fragment.
    -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Superposition pour le scan -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scanner_overlay" />

    <!-- Message indicatif pour l'utilisateur -->
    <TextView
        android:id="@+id/tv_scan_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="#80000000"
        android:text="Visez le code-barres"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <!--
        Bouton optionnel pour déclencher le scan manuellement
        ou pour une autre action comme allumer le flash.
    -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scan_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/ic_scanner_40dp"
        tools:ignore="ContentDescription" />

</FrameLayout>
