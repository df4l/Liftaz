<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manger.MangerFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAddRepas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Samedi 15 Novembre"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="42dp" />

            <!-- Cercle -->
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/cpbCalories"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                app:cpb_progress="1200"
                app:cpb_progress_max="2000"
                app:cpb_background_progressbar_width="8dp"
                app:cpb_background_progressbar_color="@color/light_gray"
                app:cpb_progressbar_color="@color/purple_500"
                app:cpb_progressbar_width="12dp"
                app:cpb_progress_direction="to_right" />

            <TextView
                android:id="@+id/tvCaloriesRestantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000\ncalories\nrestantes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="-105dp" />

            <!-- Macros -->
            <LinearLayout
                android:id="@+id/layoutMacros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="69dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:text="Protéines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/ic_jambonneau_40dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="#ec99b5" />

                    <TextView
                        android:id="@+id/tvProteines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60g (1.2 g/kg)" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:text="Glucides"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/ic_banane_40dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="#86e8cd" />

                    <TextView
                        android:id="@+id/tvGlucides"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50g" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:text="Lipides"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/ic_fromage_40dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="#f2d678" />

                    <TextView
                        android:id="@+id/tvLipides"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20g" />
                </LinearLayout>

            </LinearLayout>

            <!-- MATIN -->
            <TextView
                android:id="@+id/tvMatin"
                android:text="Matin"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/emptyMatin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rien pour l'instant"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMatin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- MIDI -->
            <TextView
                android:id="@+id/tvMidi"
                android:text="Midi"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/emptyMidi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rien pour l'instant"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMidi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- APRES MIDI -->
            <TextView
                android:id="@+id/tvApresMidi"
                android:text="Après-midi"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/emptyApresMidi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rien pour l'instant"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvApresMidi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- SOIR -->
            <TextView
                android:id="@+id/tvSoir"
                android:text="Soir"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/emptySoir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rien pour l'instant"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSoir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>

    <!-- Bouton bas -->
    <Button
        android:id="@+id/btnAddRepas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un repas"
        android:textAllCaps="false"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_manger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/signe_plus"
        app:srcCompat="@android:drawable/ic_input_add"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:tint="@color/purple_500"
        app:backgroundTint="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
