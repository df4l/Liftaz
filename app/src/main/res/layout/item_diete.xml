<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:baselineAligned="false"
        >

        <!-- Camembert -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartMini"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="12dp" />

        <!-- Texte à droite du camembert -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- Titre + badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textNomDiete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nom de la diète"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000 kcal"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

            <!-- ⭐ Macronutriments (juste sous le titre) -->
            <LinearLayout
                android:id="@+id/layoutMacrosIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:weightSum="3">

                <!-- PROTÉINES -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_jambonneau_40dp"
                        app:tint="#ec99b5"/>

                    <TextView
                        android:id="@+id/tvProteinesDiete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 g"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- GLUCIDES -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_banane_40dp"
                        app:tint="#86e8cd"/>

                    <TextView
                        android:id="@+id/tvGlucidesDiete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 g"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- LIPIDES -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fromage_40dp"
                        app:tint="#f2d678"/>

                    <TextView
                        android:id="@+id/tvLipidesDiete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 g"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textActifBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIF"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/badge_actif_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:textSize="12sp" />

        <!-- Bouton delete -->
        <ImageButton
            android:id="@+id/btnDeleteDiete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Supprimer le programme" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
