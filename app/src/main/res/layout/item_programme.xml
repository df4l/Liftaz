<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ligne du haut : nom + badge + bouton suppression -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textNomProgramme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Programme de force"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textActifBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIF"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/badge_actif_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textDescriptionProgramme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programme orienté prise de masse"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/textNbSeances"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4 séances"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary" />

            <ImageButton
                android:id="@+id/btnDeleteProgramme"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Supprimer le programme" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
